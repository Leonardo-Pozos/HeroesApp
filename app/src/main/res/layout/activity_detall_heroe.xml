<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="30sp"
    android:id="@+id/main"
    tools:context=".ui.HeroeDetallActivity">
    <TextView
        android:id="@+id/heroeNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del heroe"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroeNameTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/heroe_image_detall"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:src="@drawable/editorial_ejemplo"/>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/heroe_description"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:text="lorem"
            android:textSize="18dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>